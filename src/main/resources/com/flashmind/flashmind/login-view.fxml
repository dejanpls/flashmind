<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.flashmind.flashmind.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Label to display messages -->
    <Label fx:id="buttonText"/>

    <!--  Input field for Username  -->
    <Label text="Username:"/>
    <TextField fx:id="usernameField" promptText="Enter your username"/>

    <!--  Input field for Password  -->
    <Label text="Password:"/>
    <TextField fx:id="passwordField" promptText="Enter your password"/>

    <!-- Buttons for actions -->
    <HBox alignment="CENTER" spacing="10.0">
        <Button text="Submit" onAction="#onLoginButtonClick"/>
        <Button text="Cancel" onAction="#onCancelButtonClick"/>
    </HBox>
</VBox>